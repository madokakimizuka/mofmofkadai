<%= form_for @property do |f| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_area :name %>
  </div>

  <div class="field">
    <%= f.label :rent %>
    <%= f.number_field :rent %>円
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>年
  </div>

  <div class="field">
    <%= f.label :remarks %>
    <%= f.text_area :remarks %>
  </div>

  <hr>
  <%= f.fields_for :nearest_stations do |s| %>
    <h3>最寄り駅<%= s.index + 1 %></h3>
    <div class="form-group">
      <div class="field">
        <%= s.label :路線名 %>
        <%= s.text_field :route_name %>
      </div>
      <div class="field">
        <%= s.label :最寄り駅 %>
        <%= s.text_field :name %>
      </div>
      <div class="field">
        <%= s.label :徒歩分数 %>
        <%= s.text_field :walking_minutes %>分
      </div>
    </div>
  <% end %>
  <br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
